<%- include('../../partials/admin_head', { title }) %>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">Đơn hàng</h2>
    <div class="d-flex gap-2">
      <a class="btn btn-outline-secondary" href="/admin">← Dashboard</a>
      <a class="btn btn-primary" href="/admin/donhang/create">+ Thêm</a>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th>Id</th>
            <th>Tài khoản</th>
            <th>Mã đơn</th>
            <th>Tổng tiền</th>
            <th>Ngày đặt</th>
            <th>Trạng thái</th>
            <th class="text-nowrap">Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% if (rows.length === 0) { %>
            <tr><td colspan="7" class="text-center py-4 text-muted">Chưa có dữ liệu</td></tr>
          <% } %>
          <% rows.forEach(r => { %>
            <tr>
              <td><%= r.Id %></td>
              <td><%= r.TenDangNhap || ('#' + r.IdTaiKhoan) %></td>
              <td><%= r.MaDonHang %></td>
              <td><%= r.TongTien %></td>
              <td><%= r.NgayDat ? new Date(r.NgayDat).toLocaleString('vi-VN') : '' %></td>
              <td><%= r.TrangThai %></td>
              <td>
                <div class="d-flex form-actions">
                  <a class="btn btn-sm btn-outline-primary" href="/admin/donhang/<%= r.Id %>/edit">Sửa</a>
                  <form method="post" action="/admin/donhang/<%= r.Id %>/delete" onsubmit="return confirm('Xóa đơn hàng này?');">
                    <button class="btn btn-sm btn-outline-danger" type="submit">Xóa</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
<%- include('../../partials/admin_footer') %>


