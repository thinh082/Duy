<%- include('../../partials/admin_head', { title }) %>
  <div class="row">
    <div class="col-lg-8 col-xl-7">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="h5 mb-3"><%= title %></h2>
          <form method="post" action="<%= action==='create' ? '/admin/donhang/create' : ('/admin/donhang/' + data.Id + '/edit') %>">
            <div class="mb-3">
              <label class="form-label">Tài khoản</label>
              <select class="form-select" name="IdTaiKhoan" required>
                <option value="" disabled <%= !data.IdTaiKhoan ? 'selected' : '' %>>-- Chọn tài khoản --</option>
                <% users.forEach(u => { %>
                  <option value="<%= u.Id %>" <%= String(u.Id)===String(data.IdTaiKhoan) ? 'selected' : '' %>><%= u.TenDangNhap %></option>
                <% }) %>
              </select>
            </div>
            <div class="mb-3">
              <label class="form-label">Mã đơn hàng</label>
              <input class="form-control" name="MaDonHang" required value="<%= data.MaDonHang || '' %>" />
            </div>
            <div class="mb-3">
              <label class="form-label">Tổng tiền</label>
              <input class="form-control" name="TongTien" type="number" step="0.01" required value="<%= data.TongTien || '' %>" />
            </div>
            <div class="mb-3">
              <label class="form-label">Ngày đặt</label>
              <input class="form-control" name="NgayDat" type="datetime-local" value="<%= data.NgayDat ? new Date(data.NgayDat).toISOString().slice(0,16) : '' %>" />
            </div>
            <div class="mb-3">
              <label class="form-label">Trạng thái</label>
              <input class="form-control" name="TrangThai" value="<%= data.TrangThai || '' %>" />
            </div>
            <div class="d-flex form-actions">
              <a class="btn btn-outline-secondary" href="/admin/donhang">Huỷ</a>
              <button class="btn btn-primary" type="submit">Lưu</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<%- include('../../partials/admin_footer') %>


