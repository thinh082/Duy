<%- include('../../partials/admin_head', { title }) %>
  <div class="row">
    <div class="col-lg-7 col-xl-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="h5 mb-3"><%= title %></h2>
          <form method="post" action="<%= action==='create' ? '/admin/taikhoan/create' : ('/admin/taikhoan/' + data.Id + '/edit') %>">
            <div class="mb-3">
              <label class="form-label">Tên đăng nhập</label>
              <input class="form-control" name="TenDangNhap" required value="<%= data.TenDangNhap %>" />
            </div>
            <div class="mb-3">
              <label class="form-label">Mật khẩu <small class="text-muted">(bỏ trống nếu không đổi)</small></label>
              <input class="form-control" name="MatKhau" type="password" value="" />
            </div>
            <div class="mb-3">
              <label class="form-label">Họ tên</label>
              <input class="form-control" name="HoTen" value="<%= data.HoTen || '' %>" />
            </div>
            <div class="mb-3">
              <label class="form-label">Email</label>
              <input class="form-control" name="Email" type="email" value="<%= data.Email || '' %>" />
            </div>
            <div class="d-flex form-actions">
              <a class="btn btn-outline-secondary" href="/admin/taikhoan">Huỷ</a>
              <button class="btn btn-primary" type="submit">Lưu</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<%- include('../../partials/admin_footer') %>


