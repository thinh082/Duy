<%- include('../../partials/admin_head', { title }) %>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">Tài khoản</h2>
    <div class="d-flex gap-2">
      <a class="btn btn-outline-secondary" href="/admin">← Dashboard</a>
      <a class="btn btn-primary" href="/admin/taikhoan/create">+ Thêm</a>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th>Id</th>
            <th>Tên đăng nhập</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Ngày tạo</th>
            <th class="text-nowrap">Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% if (rows.length === 0) { %>
            <tr><td colspan="6" class="text-center py-4 text-muted">Chưa có dữ liệu</td></tr>
          <% } %>
          <% rows.forEach(r => { %>
            <tr>
              <td><%= r.Id %></td>
              <td><%= r.TenDangNhap %></td>
              <td><%= r.HoTen %></td>
              <td><%= r.Email %></td>
              <td><%= r.NgayTao ? new Date(r.NgayTao).toLocaleString('vi-VN') : '' %></td>
              <td>
                <div class="d-flex form-actions">
                  <a class="btn btn-sm btn-outline-primary" href="/admin/taikhoan/<%= r.Id %>/edit">Sửa</a>
                  <form method="post" action="/admin/taikhoan/<%= r.Id %>/delete" onsubmit="return confirm('Xóa tài khoản này?');">
                    <button class="btn btn-sm btn-outline-danger" type="submit">Xóa</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
<%- include('../../partials/admin_footer') %>


